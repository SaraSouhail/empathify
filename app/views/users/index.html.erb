<h1 class="page-header">Users:</h1>
<div class="container users-container">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-xl-4">
        <div class="user-container">
          <div class="d-flex">
            <div class="profile-pic">
              <%= image_tag "sky.jpg", class: "rounded-circle", style: "width:50px; height:50px;" %>
            </div>
            <div class="user-infos">
              <%= link_to user_path(user) do %>
                <h5 class="text-primary" style="margin-bottom: 12px"><%= user.username %></h5>
              <% end %>
              <h6><strong>Country:</strong>  <%= user.country %></h6>
              <h6><strong>City:</strong>  <%= user.city %></h6>
              <h6><strong>Issue:</strong>  <%= user.bullying_type %></h6>
            </div>
          </div>
          <button class="btn btn-primary add-friend">Add friend</button>
        </div>
      </div>
    <% end %>
  </div>
</div>




<style>

  .user-container {
  margin-right: 10px; /* or 5px */
  margin-bottom: 14px;
  background-color: #fafafa;
  border: 1px solid #4385f5;
  border-radius: 10px;
  box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.1);
  width: 300px;
  padding: 10px;
}
  .users-container {
    padding-left: 385px;
  }

  .page-header {
    margin-top: 80px;
    margin-left: 500px;
    font-size: 36px;
    font-weight: bold;
    width: fit-content;
    box-shadow: rgb(195, 195, 195) 3px 3px 3px;
    background-color: #fafafa;
    padding: 5px 10px;
    border-radius: 15px;
    color: #00257F;
  }

  .profile-pic {
    margin-right: 20px;
  }

  .add-friend {
    width: 250px;
    margin-left: 14px;
    border: none;
    border-radius: 7px;
  }
  .add-friend:hover {
    background-color: yellow;
    color: #4385f5;
    border: none;
  }

</style>
